{% set action = objet.action %}
{% if objet.action == 'init' %}
    <style>
        #{{ objet.id }}_form {
        {% if objet.autoCenter == true %}
            {% set objClass = "" %}
            width: {{ objet.autoCenterPx }};
            height: {{ objet.autoCenterPy }};
            position: absolute;
            top:0;
            bottom: 0;
            left: 0;
            right: 0;
            margin: auto;
        {% endif %}
            display: {{ objet.display }};
        {% if objet.style is not empty %}
            {{ objet.style | raw }}
        {% endif %}
        }

        {% if objet.cssCode is not empty %}
        {% for selector, code in objet.cssCode %}
        {{ selector | raw }} {
        {{  code | raw }}
        }
        {% endfor %}
        {% endif %}
    </style>

    {% set objClass = "gotObject "~gotBootstrap(objet.widthBT) %}

    <div id="{{ objet.id }}_form" class="{{ objClass }}">
        {{ content | raw }}
        <div class="btn col-lg-12 col-md-12 col-sm-12 col-xs-12">
            {% for submitId in objet.submits %}
                {{ gotRender(submitId) }}
            {% endfor %}
            {{ gotRender(objet.reset) }}
        </div>

        <script id="{{ objet.id }}" type="text/javascript">
        {% for child in objet.requireChildren %}
        $('#{{ child }} label').append('<span style="color:red"> *</span>');
        {% endfor %}
        </script>

        <script id="{{ objet.id }}" type="text/javascript">
        </script>
    </div>
{% elseif objet.action == 'reset' %}
    <script id="{{ objet.id }}" type="text/javascript">
        razFormDatas('{{ objet.id }}');
    </script>
{% elseif objet.action == 'setVal' %}
    <script id="{{ objet.id }}" type="text/javascript">
        setFormDatas('{{ objet.id }}', [{{ objet.datas }}]);
    </script>
{% endif %}

