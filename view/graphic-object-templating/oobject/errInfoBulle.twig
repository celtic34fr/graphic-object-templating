{# template pour l'ajout d'infoBulle Ã  tout objet en cas d'eereur directe ou indirecte #}

rel= "{{ infoBulle.type }}"
{% if infoBulle.type == 'tooltip' %}
    {% if infoBulle.title is not empty %}
        data-original-title= '<span style="color:red">{{ infoBulle.title }}</span>'
        {% if infoBulle.content is not empty %}
            data-original-title= data-original-title ~ ' : <span style="color:red">{{ infoBulle.content }} </span>'
        {% endif %}
    {% elseif infoBulle.content is not empty %}
        data-original-title= '<span style="color:red">{{ infoBulle.content }}</span>"
    {% endif %}
{% else %}
    data-original-title= '<span style="color:red">{{ infoBulle.title }}</span>'
    data-content= "{{ infoBulle.content }}"
{% endif %}

{% if infoBulle.delay-show is defined %}
    {% set delay = '{show: ' ~ infoBulle.delay-show %}
{% else %}
    {% set delay = '{show: 0' %}
{% endif %}
{% if infoBulle.delay-hide is defined %}
    {% set delay = delay ~ ', hide: ' ~ infoBulle.delay-show ~ '}' %}
{% else %}
    {% set delay = delay ~ ', hide: 400}' %}
{% endif %}
data-delay="{{ delay }}"

{% for key, param in infoBulle %}
    {% if key not in ['title', 'content', 'type', 'delay-show', 'delay-hide'] %}
        data-{{ key }} = "{{ param }}"
    {% endif %}
{% endfor %}