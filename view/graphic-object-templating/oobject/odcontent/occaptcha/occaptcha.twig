{# termplate pour l'objet OCCaptcha #}

{% set objClass = gotBootstrap(objet.widthBT) %}

{% set labelClass = gotBootstrap(objet.labelWidthBT) %}

<style>
    #{{ objet.id }} {
        display: {{ objet.display }};
        {% if objet.style is not empty %}
        {{ objet.style | raw }}
        {% endif %}
    }
</style>

<div id="{{ objet.id }}" data-objet="{{ objet.object }}"
        {% if objet.form is not empty %} data-form="{{ objet.form }}" {% endif %}
        {% if objClass is not empty %} class="{{ objClass }}" {% endif %}
>
    <label for="{{ objet.id }}_{{ objet.type }}"
            {% if labelClass is not empty %} class="{{ labelClass }}" {% endif %}
    >
        {{ objet.label }}
    </label>
    <input type="text" id="{{ objet.id }}Captcha" name="{{ objet.name }}">
</div>

<script>
    $(function () {
        $('#{{ objet.id }}').realperson();

        {% if objet.length is defined and objet.length is not empty %}
        ('#{{ objet.id }}').realperson( 'option', 'length', {{ objet.length }});
        {% endif %}
        {% if objet.includeNumbers is defined and objet.includeNumbers is not empty %}
        ('#{{ objet.id }}').realperson( 'option', 'includeNumbers', {{ objet.includeNumbers }});
        {% endif %}
        {% if objet.chars is defined and objet.chars is not empty %}
        ('#{{ objet.id }}').realperson( 'option', 'chars', {{ objet.chars }});
        {% endif %}

    });
</script>