{# termplate pour l'objet OCCaptcha #}

{% set objClass = gotBootstrap(objet.widthBT) %}

{% set labelClass = gotBootstrap(objet.labelWidthBT) %}

<style>
    #{{ objet.id }} {
        display: {{ objet.display }};
        {% if objet.style is not empty %}
        {{ objet.style | raw }}
        {% endif %}
    }
</style>

    <input type="text" id="{{ objet.id }}Captcha" name="{{ objet.name }}Captcha">
</div>

<div id="{{ objet.id }}" data-objet="{{ objet.object }}"
        {% if objet.form is not empty %} data-form="{{ objet.form }}" {% endif %}
        {% if objClass is not empty %} class="{{ objClass }}" {% endif %}
>
    <label for="{{ objet.id }}_{{ objet.type }}"
            {% if labelClass is not empty %} class="{{ labelClass }}" {% endif %}
    >
        {{ objet.label }}
    </label>
    <div id="captcha-wrap">
        <img src="./img/refresh.jpg" alt="refresh captcha" id="refresh-captcha" />
        <img src="{{ gotAjax("#{{ objet.id }} #captcha","Objects/OCCaptcha/generateCaptcha") }}" alt="" id="captcha" />
    </div>
    <input class="narrow text input" id="{{ objet.id }}_{{ objet.type }}" name="{{ objet.id }}_{{ objet.type }}" type="text" placeholder="Verification Code">
</div>