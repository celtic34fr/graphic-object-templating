            border-{{ placement }}-color: {{ color }} !important;
        }
    #{{ id }} + .tooltip > .tooltip-inner {
        border: 1px dotted {{ color }};
    {% case 'tooltip' %}
    #{{ id }} + .{{ type }} > .tooltip-inner {
    {% case 'popover' %}
    #{{ id }} + .{{ type }} > .popover-title,
    #{{ id }} + .{{ type }} > .popover-content {
{% endswitch %}
    {{ css | raw }}
}
